{
  "extends": ["config:base"],
  "packageRules": [
    {
      "automerge": true,
      "automergeStrategy": "squash",
      "labels": ["automerge"],
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "prPriority": 1,
      "rebaseWhen": "behind-base-branch"
    }
  ],
  "separateMinorPatch": true,
  "stabilityDays": 3,
  "timezone": "Europe/London"
}
